---
import Layout from "../../../layouts/Layout.astro";
import type { InferGetStaticParamsType, GetStaticPaths } from "astro";

// runs during compilation only
export const getStaticPaths = async () => {
  const response = await fetch("https://swapi.dev/api/");
  const data = (await response.json()) as Record<string, string>;

  // const navElements = Object.entries(data);
  // const navKeys = Object.keys(data);

  const navCategories = Object.keys(data).flatMap((category) => [
    {
      params: {
        category,
        path: '0', // temp
      },
    },
    {
      params: {
        category,
        path: '1', // temp
      },
    },
    {
      params: {
        category,
        path: '2', // temp
      },
    },
    {
      params: {
        category,
        path: undefined, // category without page number
      },
    },
  ]);

  return navCategories;
};

type Params = InferGetStaticParamsType<typeof getStaticPaths>;

const { category, path } = Astro.params as Params;

